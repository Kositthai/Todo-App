// Count down to new year //
for (let i = 10; i >= 0; i--) {
  if (i === 10) {
    console.log("OMG");
    continue;
  }
  if (i === 0) {
    console.log("Happy new year");
    continue;
  }
  console.log(i);
}
// count by sound //
const friensList = [
  "Chris",
  "Anne",
  "Colin",
  "Terri",
  "Phil",
  "Lola",
  "Sam",
  "Kay",
  "Bruce",
];
let count = 0;

for (i = 0; i < friensList.length; i++) {
  if (friensList[i].includes("a")) {
    count++;
  } else {
    console.log(friensList[i]);
  }
}
console.log(count);

// find Lola //
for (i = 0; i < friensList.length; i++) {
  if (friensList[i] === "Lola") {
    console.log(i);
  }
}

