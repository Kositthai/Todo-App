// get circlearea by radius //
function circleArea(radius) {
  const diameter = radius * 2;
  const radiusExponent = radius ** 2;

  if (circleArea) {
    return (Math.PI * radiusExponent).toFixed(2);
  } else {
    console.log("Please fill in radius");
  }
}

circleArea(10);

// convert celcius to fahrenheit //

function celciusToFahreneit(celcius) {
  return celcius * 1.8 + 32;
}
celciusToFahreneit(28);

